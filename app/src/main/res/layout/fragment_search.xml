<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.SearchFragment"
    android:id="@+id/search_frame">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_edges"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="17dp"
        tools:context=".fragment_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#1D1D1D"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keyword"
                android:layout_width="323dp"
                android:layout_height="39dp"
                android:layout_marginBottom="10dp"
                android:text="Keyword*"
                android:textColor="@color/appGreen"
                android:textSize="25sp" />

            <AutoCompleteTextView
                android:id="@+id/editKeyword"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Enter the Keyword"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#999999"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="323dp"
                android:layout_height="39dp"
                android:layout_marginBottom="10dp"
                android:text="Distance (Miles)*"
                android:textColor="@color/appGreen"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editDistance"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="10"
                android:inputType="textPersonName"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="323dp"
                android:layout_height="39dp"
                android:layout_marginBottom="7dp"
                android:text="Category*"
                android:textColor="@color/appGreen"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="323dp"
                android:layout_height="39dp"
                android:layout_marginBottom="8dp"
                android:popupBackground="@color/black"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="39dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="163dp"
                    android:layout_height="39dp"
                    android:text="Location*"
                    android:textColor="@color/appGreen"
                    android:textSize="25sp" />

                <Switch
                    android:id="@+id/autoDetect"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:text="Auto-Detect"
                    android:textColor="#999999"
                    android:textSize="18sp"
                    android:theme="@style/GreenSwitch" />
            </LinearLayout>

            <EditText
                android:id="@+id/editLocation"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Enter the Location"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#999999"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="157dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#3A8C12"
                    android:text="@string/search_button"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/clearButton"
                    android:layout_width="156dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#CE6521"
                    android:text="@string/clear_button"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="21sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>