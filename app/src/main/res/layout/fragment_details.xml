<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="Fragments.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="391dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="353dp"
            android:layout_height="771dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edges"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Artist/Teams"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/artistName"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Venue"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/venueName"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Date"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Time"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Genres"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/genres"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Price Range"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/priceRange"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="TextView"
                        android:textColor="#01DD01" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="33dp"
                        android:layout_column="1"
                        android:text="Ticket Status"
                        android:textColor="#FFFFFF" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="116dp"
                        android:layout_height="34dp">>

                        <Button
                            android:id="@+id/ticketStatus"
                            android:layout_width="74dp"
                            android:layout_height="31dp"
                            android:text="On Sale"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout/>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="31dp"
                        android:layout_column="1"
                        android:text="Buy Tickets At"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/ticketURL"
                        android:layout_width="175dp"
                        android:layout_height="31dp"
                        android:text="@string/ticket_url"
                        android:textColor="#4CA327"
                        android:textSize="14sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">


                    <ImageView
                        android:id="@+id/seatMap"
                        android:layout_width="161dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_span="4"
                        tools:src="@tools:sample/avatars" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>